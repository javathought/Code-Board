#{extends 'main.html' /}

#{set 'title'}&{'application.title'}#{/set}

<div id="header">
	<h1>#{get 'title' /}</h1>
	<div id="main-menu"></div>
	
</div>

<div class="nosidebar" id="main">

    <div id="sidebar">        
        
        
    </div>
    
	<div id="content">    

		<h2>&{'home'}</h2>

		<div class="splitcontentleft">
  
  			<div>${setting.welcome_text?.textile().raw()}</div>
  
		</div>
	
		<div class="splitcontentright">
			<div class="projects box">
				<h3>&{'latest_projects'}</h3>
	
				#{if projects}
			    <ul>
			 	#{list items:projects, as:'project'}
				<!-- id="project_${project.id}"  -->
					<li>
					<a href="/projects/${project.identifier}">${project.name}</a> (${project.created?.format("dd-MM-yy hh:mm a")})
			<p>${project.description} </p>
			    	</li>
				#{/list}
			    </ul>
			 	#{/if}
			</div>
		</div>
		<div style="clear:both;"></div>
	</div>
</div>

