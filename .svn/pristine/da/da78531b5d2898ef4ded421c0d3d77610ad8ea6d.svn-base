#{extends 'main.html' /}

#{set 'title'}${project?.name} Â» &{'issue'} #${issue?.id} #{/set}

#{if issue?.id}
	#{set issuesSelected:'selected' /}
#{/if}
#{else}
	#{set newIssueSelected:'selected' /}
#{/else}


<div id="header">
	<h1>${project?.name}</h1>
	<div id="main-menu">
				#{main-menu project:project /}		
	</div>
	
</div>


<div class="nosidebar" id="main">

    <div id="sidebar">        
        
    </div>
    
	<div id="content">    

		#{if issue?.id}
		<h2>&{'issue'} #${issue.id}</h2>
		#{/if}
		#{else}
		<h2>&{'new_issue'}</h2>
		#{/else}
				
		#{form @Application.saveIssue(project.id, trackerId, assigneeId), id:'form', method:'POST', enctype:'multipart/form-data'}
		
		<!-- div style="margin:0;padding:0;display:inline"><input name="authenticity_token" type="hidden" value="vP16Qzvu8DNmx6DBZczytDcOHScCCkM0YpYT5ZusdGk=" /></div -->
    
    		<div class="box">
				<div id="issue_descr_fields" >

					    <!-- input style="visibility:hidden"  type="text" name="issue.project" id="project" value="${project.identifier}"/ -->

 					<input type="hidden" name="issue.id" id="id" value="${issue?.id}" />


					<p><label for="issue_tracker_id">&{'tracker'}<span class="required"> *</span></label>
					#{select 'trackerId', items:trackers, valueProperty:'id', labelProperty:'name', id:'id', value:"${issue?.tracker?.id}" /}
					</p>

					<p class="field">
					    <label for="subject">&{'subject'}</label>
					    <input type="text" name="issue.subject" id="subject" value="${issue?.subject}"/>
					    <!-- span class="error">${errors.forKey('issue.subject')}</span -->
					</p>

					<p class="field">
					<!-- fieldset><legend>&{'description'}</legend -->
					    <label for="description">Description</label>
					    <textarea type="text" name="issue.description" id="description" class="wiki-edit" cols="80" rows="10">${issue?.description}</textarea>
					<!-- /fieldset -->
					    <!-- span class="error">${errors.forKey('issue.description')}</span -->
					</p>
					
				</div>



				<div id="attributes" class="attributes">
			
		
					<div class="splitcontentleft">
	
					<p><label for="issue_state">&{'state'}<span class="required"> *</span></label>
					#{select 'stateId', items:states, valueProperty:'id', labelProperty:'name', id:'state', value:"${issue?.state?.id}" /}
					</p>
	
					</div>
	
					<div class="splitcontentright">					
					<p><label for="issue_assignee">&{'assignee'}</label>
					#{select 'assigneeId', items:users, valueProperty:'id', id:'assignee', value:"${issue?.assignee?.id}" }
					<option> </option>
					#{/select}
					</p>
					
					</div>
					
					<div style="clear:both;" />
				</div>
			</div>
		
		</div>
		
		<input name="commit" type="submit" 
		#{if issue?.id}
		value="&{'save'}" 
		#{/if}
		#{else}
		value="&{'create'}" 
		#{/else}
		/>
		#{/form}		
		<div style="clear:both;"></div>
	</div>
</div>

