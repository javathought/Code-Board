<!DOCTYPE html>

<html>
    <head>
        <title>#{get 'title' /}</title>
        <meta charset="${_response_encoding}">
        #{theme /}
        #{get 'moreStyles' /}
        <link rel="shortcut icon" type="image/png" href="@{'/public/images/favicon.png'}">
        <script src="@{'/public/javascripts/jquery-1.5.2.min.js'}" type="text/javascript" charset="${_response_encoding}"></script>
        #{get 'moreScripts' /}

    </head>
    <body>
    <div id="wrapper">
	<div ud="wrapper2">
		<div id="top-menu">
			<div id="account">
				<ul><li>
				#{if session.contains("username")}
			       <a href="@{Secure.logout()}">&{'logout'}</a>
			    #{/if}
			    #{else}
			      <a href="@{Secure.login()}">&{'login'}</a>
			    #{/else}
			    </li></ul>		
			</div>
			#{if session.contains("username")}
		    <div id="loggedas">&{'logged_as'} <a href="/me">${username}</a></div>
		    #{/if}
		    
	        <ul><li><a href="/" class="home">&{'home'}</a></li>
			#{if session.contains("username")}
			<li><a href="/me/issues" class="my-page">&{'my_page'}</a></li>
		    #{/if}
		
			<!-- li><a href="/projects" class="projects">&{'projects'}</a></li -->
			#{secure.check 'admin'}
			<li><a href="/admin" class="administration">&{'administration'}</a></li>
			<li><a href="/admin/settings" class="administration">&{'settings'}</a></li>
		    #{/secure.check}
			    
     	</div>
		
        #{doLayout /}        
		
		<div style="clear:both;"> </div>

		<div id="footer">
			<div class="bgl"><div class="bgr">&{'powered_by'} <a href="http://javathought.wordpress.com">Javathought</a>
			</div></div>
		</div>
	</div>
	</div>
    </body>
</html>
